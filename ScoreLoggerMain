package scorelogger;

public class ScoreLoggerMain {
    public static void main(String[] args) {
        String fileName = "student_records.csv";
        FileHandler handler = new FileHandler(fileName);

        Thread student1 = new Thread(() -> handler.saveRecord(new Learner("Riya", 201, 84)));
        Thread student2 = new Thread(() -> handler.saveRecord(new Learner("Karan", 202, 91)));
        Thread student3 = new Thread(() -> handler.saveRecord(new Learner("Meera", 203, 78)));

        student1.start();
        student2.start();
        student3.start();


        try {
            student1.join();
            student2.join();
            student3.join();
        } catch (InterruptedException e) {
            e.printStackTrace();
        }

        System.out.println("âœ… All student records successfully logged!");
    }
}
